# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# AI Configuration (for Growth Insights)
# Get your API key from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key

# SMTP Email Configuration (for sending quotation emails)
# Required for email functionality to send quotations to customers
# Port 465 = SSL (SMTP_SECURE=true), Port 587 = STARTTLS (SMTP_SECURE=false)
SMTP_HOST=smtp.ugc.co.id
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=quotation@ugc.co.id
SMTP_PASS=your_smtp_password
SMTP_FROM="Quotation | UGC Logistics <quotation@ugc.co.id>"

# CRM Email Configuration (for CRM notifications - separate from quotation emails)
# Used for lead notifications, pipeline reminders, activity alerts, and weekly summaries
CRM_SMTP_HOST=smtp.ugc.co.id
CRM_SMTP_PORT=465
CRM_SMTP_SECURE=true
CRM_SMTP_USER=crm@ugc.co.id
CRM_SMTP_PASS=your_crm_smtp_password
CRM_SMTP_FROM="CRM UGC Logistics <crm@ugc.co.id>"

# Cron Job Authentication (for scheduled tasks)
# Set a secure random string - used to authenticate cron job requests
CRON_SECRET=your_secure_random_string
