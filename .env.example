# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# AI Configuration (for Growth Insights)
# Get your API key from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key

# SMTP Email Configuration (for sending quotation emails)
# Required for email functionality to send quotations to customers
# Port 465 = SSL (SMTP_SECURE=true), Port 587 = STARTTLS (SMTP_SECURE=false)
SMTP_HOST=smtp.ugc.co.id
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=quotation@ugc.co.id
SMTP_PASS=your_smtp_password
SMTP_FROM="Quotation | UGC Logistics <quotation@ugc.co.id>"

# CRM SMTP Email Configuration (for CRM notifications)
# Separate SMTP configuration for CRM module to avoid conflict with quotation emails
CRM_SMTP_HOST=smtp.ugc.co.id
CRM_SMTP_PORT=465
CRM_SMTP_SECURE=true
CRM_SMTP_USER=crm@ugc.co.id
CRM_SMTP_PASS=your_crm_smtp_password
CRM_SMTP_FROM="CRM UGC Logistics <crm@ugc.co.id>"

# Cron Job Secret (optional, for manual cron triggering)
CRON_SECRET=your_cron_secret

# Static Map Configuration (optional)
# Used for displaying location previews in CRM activities (Site Visit)
#
# Map Provider: Choose between 'mapbox' or 'osm'
# Default: 'osm' (will show placeholder if Mapbox not configured)
NEXT_PUBLIC_MAP_PROVIDER=mapbox

# Mapbox Static Images API (recommended for reliable map previews)
# Get your access token from: https://account.mapbox.com/access-tokens/
# 1. Sign up for a free Mapbox account at https://www.mapbox.com/
# 2. Go to Account > Access tokens
# 3. Create a new token or use the default public token
# Free tier includes 50,000 static map requests/month
NEXT_PUBLIC_MAPBOX_STATIC_URL=https://api.mapbox.com/styles/v1/mapbox/streets-v12/static
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_public_token

# OpenStreetMap Static URL (fallback, optional)
# Note: The old staticmap.openstreetmap.de service is unreliable
# If Mapbox is not configured, a placeholder will be shown instead
NEXT_PUBLIC_OSM_STATIC_URL=https://tile.openstreetmap.org
